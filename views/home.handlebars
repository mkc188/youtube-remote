<body>
  <div class="container-fluid">
    <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills pull-right">
          <li role="presentation" id="qr-code"></li>
        </ul>
      </nav>
      <h3 class="text-muted">CSCI4140 - Assignment 2</h3>
      <p class="lead">YouTube Remote</p>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-8 visible-md-inline visible-lg-inline">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">YouTube Player</h3>
          </div>
          <div class="panel-body player">
            <div id="player" class="video"></div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">YouTube Remote Control</h3>
          </div>
          <div id="control-panel" class="panel-body text-center">

            <div class="row">
              <div id="play" class="btn col-xs-4">
                <i class="fa fa-play"><span class="visible-sm-inline"> PLAY </span></i>
              </div>
              <div id="pause" class="btn col-xs-4">
                <i class="fa fa-pause"><span class="visible-sm-inline"> PAUSE </span></i>
              </div>
              <div id="stop" class="btn col-xs-4">
                <i class="fa fa-stop"><span class="visible-sm-inline"> STOP </span></i>
              </div>
            </div>
            <div class="row">
              <div id="fast-backward" class="btn col-xs-3">
                <i class="fa fa-fast-backward"><span class="visible-sm-inline"> PREVIOUS </span></i>
              </div>
              <div id="backward" class="btn col-xs-3">
                <i class="fa fa-backward"><span class="visible-sm-inline"> REWIND </span></i>
              </div>
              <div id="forward" class="btn col-xs-3">
                <i class="fa fa-forward"><span class="visible-sm-inline"> FAST FORWARD </span></i>
              </div>
              <div id="fast-forward" class="btn col-xs-3">
                <i class="fa fa-fast-forward"><span class="visible-sm-inline"> NEXT </span></i>
              </div>
            </div>
            <div class="row">
              <div id="mute" class="btn col-xs-6">
                <i class="fa fa-volume-off"><span class="visible-sm-inline"> MUTE </span></i>
              </div>
              <div id="unmute" class="btn col-xs-6">
                <i class="fa fa-volume-up"><span class="visible-sm-inline"> UNMUTE </span></i>
              </div>
            </div>
          </div>
        </div>

      </div>
      <div class="col-xs-12 col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Playlist</h3>
          </div>
          <div class="panel-body">
            <ul id="playlist" class="list-group"></ul>

            <div class="input-group">
              <input id="video-url" type="text" class="form-control" placeholder="Enter Video ID or URL">
              <span id="add-video" class="btn input-group-addon">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
              </span>
            </div>
            <div id="error-msg"></div>
            <br />
          <button id="clear-completed" type="button" class="btn btn-default btn-block">Clear All</button>
        </div>
      </div>
    </div>
  </div>

